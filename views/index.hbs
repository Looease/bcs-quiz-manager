   {{#if isAdmin}}
<table id="buttons-group">
    <thead>
    <h1>Quiz Categories</h1>
    </thead>
    <h2>You are an admin</h2>
    {{#each quiz}}
        <tr>
            <td>{{this.title}}</td>
            {{!-- <td><a href="" class="btn">Play</a></td> --}}
            <td><a href="/questions/{{this.title}}" class="btn" data-id="{{this.id}}">View</a></td>    
            <td><a href="/questions/edit/{{this.id}}" class="btn" data-id="{{this.id}}">Edit</a></td>
     {{/each}}        
        </tr>
   
</table>
<ul class="btn-container">
    <li><a href="/quiz/edit/" class="btn" data-id="{{this.id}}">Update a Quiz</a></li>
    <li><a href="/quiz/delete/" class="btn" data-id="{{this.id}}">Delete</a></li>
    <li><a href="/quiz/new" class="btn">Create new quiz</a></li>
   </ul>
   {{/if}}  
    {{#if isView}}
   <table id="buttons-group">
    <thead>
    <h1>Quiz Categories</h1>
    </thead>
    <h2>You are a viewer</h2>
    
    {{#each quiz}}
        <tr>
            <td>{{this.title}}</td>
            <td><a href="/questions/{{this.title}}" class="btn" data-id="{{this.id}}">View</a></td>    
     {{/each}}        
        </tr>  
</table>
 {{/if}} 
{{#if isRestricted}}
   <table id="buttons-group">
    <thead>
    <h1>Quiz Categories</h1>
    </thead>
    {{meow}}

    <h2>You are a restricted viewer</h2>
    {{#each quiz}}
        <tr>
            <td>{{this.title}}</td>
            <td><a href="/questions/questionsOnly/{{this.id}}" class="btn" data-id="{{this.id}}">View</a></td>    
     {{/each}}        
        </tr>  
</table>
       
    
{{/if}} 









